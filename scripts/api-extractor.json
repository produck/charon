
{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",
	"projectFolder": "..",
	"mainEntryPointFilePath": "<projectFolder>/packages/charon/index.d.ts",
  "compiler": {
		"tsconfigFilePath": "<projectFolder>/packages/charon/tsconfig.json"
	},
	"apiReport": {
    "enabled": true,
    "reportFileName": "<packageName>.api.md",
		"reportFolder": "<projectFolder>/scripts/etc/",
    "reportTempFolder": "<projectFolder>/scripts/temp/"
  },
  "docModel": {
      "enabled": true,
      "apiJsonFilePath": "<projectFolder>/scripts/temp/<packageName>.api.json"
  },
  "dtsRollup": {
    "enabled": false
  },
  "tsdocMetadata": {
    "enabled": false
  },
  "messages":{
    "compilerMessageReporting": {
      "default": {
        "logLevel": "error",
        "addToApiReportFile": false
      }
    },
    "extractorMessageReporting": {
      "default": {
        "logLevel": "error"
      },
			"ae-missing-release-tag": {
				"logLevel": "none"
			}
    },
    "tsdocMessageReporting": {
      "default": {
        "logLevel": "none"
      }
    }
  }
}